{
  "manifest_version": 3,
  "name": "ProofResume",
  "version": "1.0.0",
  "description": "Generate tailored resumes with truth verification",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  }
}

